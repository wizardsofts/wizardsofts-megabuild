# Hadith Knowledge Graph - Environment Variables
# Copy to .env and fill in actual values

# ============================================
# EXISTING INFRASTRUCTURE (Server 84)
# ============================================

# Redis (Celery Broker) - Server 84:6380
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@10.0.0.84:6380/0
CELERY_BROKER_URL=redis://:YOUR_REDIS_PASSWORD@10.0.0.84:6380/0
CELERY_RESULT_BACKEND=redis://:YOUR_REDIS_PASSWORD@10.0.0.84:6380/1

# Ollama (Shared LLM) - Server 84:11434
OLLAMA_BASE_URL=http://10.0.0.84:11434
OLLAMA_MODEL=llama3.2:3b-instruct-q4_K_M
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Ray Cluster - Server 84:10001
RAY_ADDRESS=10.0.0.84:10001

# ============================================
# EXISTING DATABASES
# ============================================

# PostgreSQL - Server 80:5433 (Entity Storage)
POSTGRES_HOST=10.0.0.80
POSTGRES_PORT=5433
POSTGRES_USER=gibd
POSTGRES_PASSWORD=YOUR_POSTGRES_PASSWORD
POSTGRES_DB=gibd

# ============================================
# PROJECT-SPECIFIC SERVICES (Local/Docker)
# ============================================

# Neo4j (Hadith Knowledge Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=hadithknowledge2025

# ChromaDB (Hadith Vector Embeddings)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=hadith_embeddings

# ============================================
# APPLICATION SETTINGS
# ============================================

# Logging
LOG_LEVEL=INFO

# Extraction Settings
BATCH_SIZE=10
MAX_RETRIES=3
ENABLE_ISNAD_PARSING=false

# RAG API (Optional)
API_KEY=change-me-in-production
API_PORT=8001
