{
  "uid": "executive-overview",
  "title": "Executive Server Status",
  "tags": [
    "executive",
    "overview",
    "status"
  ],
  "style": "dark",
  "timezone": "browser",
  "refresh": "1m",
  "schemaVersion": 38,
  "version": 1,
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "System Status",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "min(up{job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"})",
          "refId": "A",
          "legendFormat": "All Servers",
          "instant": true,
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          }
        }
      ],
      "options": {
        "reduceOptions": {
          "values": false,
          "fields": "",
          "calcs": [
            "lastNotNull"
          ]
        },
        "graphMode": "none",
        "colorMode": "background",
        "orientation": "auto",
        "textMode": "value_and_name"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "1": {"text": "All Servers ONLINE", "color": "green"},
                "0": {"text": "SERVERS OFFLINE", "color": "red"}
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      }
    },
    {
      "id": 2,
      "type": "gauge",
      "title": "RAM Usage",
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes{job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"} / node_memory_MemTotal_bytes{job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"}))",
          "refId": "A",
          "instant": true,
          "legendFormat": "{{instance}}"
        }
      ],
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "type": "gauge",
      "title": "CPU Usage",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "100 - (avg by(instance)(irate(node_cpu_seconds_total{mode=\"idle\",job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"}[5m])) * 100)",
          "refId": "A",
          "instant": true,
          "legendFormat": "{{instance}}"
        }
      ],
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "type": "gauge",
      "title": "Disk Usage",
      "gridPos": {
        "x": 18,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "100 - ((node_filesystem_avail_bytes{mountpoint=\"/\",fstype!=\"rootfs\",job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"} * 100) / node_filesystem_size_bytes{mountpoint=\"/\",fstype!=\"rootfs\",job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"})",
          "refId": "A",
          "instant": true,
          "legendFormat": "{{instance}}"
        }
      ],
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "red",
                "value": 85
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Uptime",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 6,
        "h": 3
      },
      "targets": [
        {
          "expr": "(node_time_seconds - node_boot_time_seconds){job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"}",
          "refId": "A",
          "legendFormat": "{{instance}}"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "displayName": "${__field.labels.instance}",
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "yellow",
                "value": null
              },
              {
                "color": "green",
                "value": 86400
              }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "type": "stat",
      "title": "Total Memory",
      "gridPos": {
        "x": 6,
        "y": 4,
        "w": 6,
        "h": 3
      },
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes{job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"}",
          "refId": "A",
          "legendFormat": "{{instance}}"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "displayName": "${__field.labels.instance}",
          "unit": "bytes",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "blue",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "id": 7,
      "type": "stat",
      "title": "CPU Cores",
      "gridPos": {
        "x": 12,
        "y": 4,
        "w": 6,
        "h": 3
      },
      "targets": [
        {
          "expr": "count(count(node_cpu_seconds_total{mode=\"idle\",job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"}) by (cpu, instance)) by (instance)",
          "refId": "A",
          "legendFormat": "{{instance}}"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "displayName": "${__field.labels.instance}",
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "blue",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "id": 8,
      "type": "stat",
      "title": "Total Disk",
      "gridPos": {
        "x": 18,
        "y": 4,
        "w": 6,
        "h": 3
      },
      "targets": [
        {
          "expr": "node_filesystem_size_bytes{mountpoint=\"/\",fstype!=\"rootfs\",job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"}",
          "refId": "A",
          "legendFormat": "{{instance}}"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "displayName": "${__field.labels.instance}",
          "unit": "bytes",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "blue",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "Memory Trend (24h)",
      "gridPos": {
        "x": 0,
        "y": 7,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes{job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"} / node_memory_MemTotal_bytes{job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"}))",
          "refId": "A",
          "legendFormat": "{{instance}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          }
        }
      }
    },
    {
      "id": 10,
      "type": "timeseries",
      "title": "CPU Trend (24h)",
      "gridPos": {
        "x": 12,
        "y": 7,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "100 - (avg by(instance)(irate(node_cpu_seconds_total{mode=\"idle\",job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"}[5m])) * 100)",
          "refId": "A",
          "legendFormat": "{{instance}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "gradientMode": "none"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          }
        }
      }
    },
    {
      "id": 11,
      "type": "table",
      "title": "Top Docker Containers by Memory",
      "gridPos": {
        "x": 0,
        "y": 13,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "topk(5, container_memory_usage_bytes{name!=\"\"})",
          "refId": "A",
          "instant": true,
          "format": "table"
        }
      ],
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "Value"
            },
            "properties": [
              {
                "id": "unit",
                "value": "bytes"
              }
            ]
          }
        ]
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "job": true,
              "instance": true
            },
            "indexByName": {},
            "renameByName": {
              "name": "Container",
              "Value": "Memory"
            }
          }
        }
      ]
    },
    {
      "id": 12,
      "type": "stat",
      "title": "Network In (24h)",
      "gridPos": {
        "x": 12,
        "y": 13,
        "w": 6,
        "h": 3
      },
      "targets": [
        {
          "expr": "sum by(instance)(rate(node_network_receive_bytes_total{device!~\"lo|docker.*|veth.*\",job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"}[24h]) * 8)",
          "refId": "A",
          "legendFormat": "{{instance}}"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "displayName": "${__field.labels.instance}",
          "unit": "bps",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "id": 13,
      "type": "stat",
      "title": "Network Out (24h)",
      "gridPos": {
        "x": 18,
        "y": 13,
        "w": 6,
        "h": 3
      },
      "targets": [
        {
          "expr": "sum by(instance)(rate(node_network_transmit_bytes_total{device!~\"lo|docker.*|veth.*\",job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"}[24h]) * 8)",
          "refId": "A",
          "legendFormat": "{{instance}}"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "displayName": "${__field.labels.instance}",
          "unit": "bps",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "id": 14,
      "type": "stat",
      "title": "SWAP Usage",
      "gridPos": {
        "x": 12,
        "y": 16,
        "w": 6,
        "h": 3
      },
      "targets": [
        {
          "expr": "((node_memory_SwapTotal_bytes{job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"} - node_memory_SwapFree_bytes{job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"}) / node_memory_SwapTotal_bytes{job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"}) * 100",
          "refId": "A",
          "instant": true,
          "legendFormat": "{{instance}}"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "background",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "displayName": "${__field.labels.instance}",
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 20
              },
              {
                "color": "red",
                "value": 50
              }
            ]
          }
        }
      }
    },
    {
      "id": 15,
      "type": "stat",
      "title": "Load Average (5m)",
      "gridPos": {
        "x": 18,
        "y": 16,
        "w": 6,
        "h": 3
      },
      "targets": [
        {
          "expr": "node_load5{job=~\"node-exporter-80|node-exporter-81|node-exporter-84\"}",
          "refId": "A",
          "instant": true,
          "legendFormat": "{{instance}}"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "displayName": "${__field.labels.instance}",
          "unit": "short",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 4
              },
              {
                "color": "red",
                "value": 8
              }
            ]
          }
        }
      }
    }
  ]
}