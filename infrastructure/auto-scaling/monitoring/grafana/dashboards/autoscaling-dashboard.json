        "gridPos": {
          "h": 7,
          "w": 8,
          "x": 8,
          "y": 8
        },
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{name=~\"ollama.*\"}[5m])) by (name)",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {},
